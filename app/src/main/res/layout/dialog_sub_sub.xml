<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.okifwant.donggeulmonggeul_android.viewmodel.post.PostDetailViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/edit_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_textview_background"
            android:fontFamily="@font/noto_sans_regular"
            android:gravity="center"
            android:text="수정하기"
            android:textColor="#6CABDD"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/delete_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_textview_background"
            android:fontFamily="@font/noto_sans_regular"
            android:gravity="center"
            android:text="삭제하기"
            android:textColor="#C84D4D"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_btn" />

        <TextView
            android:id="@+id/report_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_regular"
            android:gravity="center"
            android:text="섭섭해요"
            android:background="@color/white"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/delete_btn" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
