<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.okifwant.donggeulmonggeul_android.viewmodel.SignUpViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.SignUpActivity">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="32dp"
            android:src="@drawable/ic_second_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_first_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="168dp"
            android:src="@drawable/ic_signup_text1"
            app:layout_constraintBottom_toTopOf="@+id/tv_id"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginBottom="63dp"
            android:text="먼저 아이디가 필요해요 :)"
            android:textColor="#7E858B"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/et_id"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/et_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="42dp"
            android:layout_marginBottom="52dp"
            android:backgroundTint="@color/black"
            android:hint="아이디를 입력해주세요"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="#AFAFAF"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />


        <ImageView
            android:id="@+id/iv_second_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/ic_signup_text1"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/tv_password"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginBottom="8dp"
            android:text="비밀번호"
            android:textColor="#7E858B"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/et_password"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/black"
            android:hint="6자리 이상 입력해주세요!"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="#AFAFAF"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/tv_password_check"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_password_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginBottom="8dp"
            android:text="비밀번호 확인"
            android:textColor="#7E858B"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/et_check_password"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/et_check_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="128dp"
            android:backgroundTint="@color/black"
            android:hint="위에서 입력했던 비밀번호를 입력해주세요!"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="#AFAFAF"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/iv_nickname_text"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_nickname_text"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/tv_exam_nickname"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_exam_nickname"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="90dp"
            android:text="개성을 찾는 길이 될 수도 있지만 남에게 상처가 되거나 \n공격적인 어조의 닉네임은 사양하도록해요"
            android:textColor="#AFAFAF"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/tv_nickname"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginBottom="12dp"
            android:text="닉네임"
            android:textColor="#AFAFAF"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/et_nickname"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="187dp"
            android:backgroundTint="@color/black"
            android:hint="당신의 개성을 찾아줄 닉네임을 입력해보세요!"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="#AFAFAF"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:src="@drawable/ic_signup_toast"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/ib_continue_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/ib_continue_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="56dp"
            android:background="@color/white"
            android:src="@drawable/ic_continue_gray_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
